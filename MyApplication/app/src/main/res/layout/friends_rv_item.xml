<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/friends_cardview">

    <RelativeLayout
        android:id="@+id/friends_item_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/friends_profile_pic"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@color/colorPrimary"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/friends_gamertag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/friends_profile_pic"
            android:text="FriendGamerTag387"
            android:layout_marginLeft="8sp"
            android:textSize="15sp"
            android:layout_centerVertical="true"/>




    </RelativeLayout>

</android.support.v7.widget.CardView>